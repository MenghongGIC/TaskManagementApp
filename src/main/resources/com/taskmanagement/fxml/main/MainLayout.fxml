<?xml version="1.0" encoding="UTF-8"?>

// ====================================================================
// Main Layout - Application Root Container with Header, Sidebar, and Content Area
// ====================================================================

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.taskmanagement.controller.MainLayoutController"
            fx:id="rootLayout"
            stylesheets="@../css/style.css"
            style="-fx-background-color: #f8f9fa;">
    
    // ============ Top Header Section ============
    <top>
        <VBox spacing="0">
            // ---------- Main Header Bar ----------
            <HBox spacing="20" alignment="CENTER_LEFT" 
                 style="-fx-background-color: #2c3e50; -fx-padding: 15;">
                <Label text="Task Management System" 
                      style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userInfoLabel" text="User" 
                      style="-fx-font-size: 12px; -fx-text-fill: #bdc3c7;"/>
                <Button text="Logout" onAction="#handleLogout" 
                       style="-fx-padding: 8 15; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 11px; -fx-background-radius: 4;"/>
            </HBox>
            
            // ---------- Breadcrumb Navigation ----------
            <HBox spacing="10" style="-fx-padding: 10 15; -fx-background-color: #34495e;">
                <Label text="ðŸ“" style="-fx-font-size: 12px; -fx-text-fill: #bdc3c7;"/>
                <Label fx:id="breadcrumbLabel" text="Dashboard" 
                      style="-fx-font-size: 12px; -fx-text-fill: #3498db;"/>
            </HBox>
        </VBox>
    </top>
    
    // ============ Left Sidebar Navigation ============
    <left>
        <VBox spacing="15" style="-fx-background-color: #34495e; -fx-padding: 20;" 
             minWidth="220" maxWidth="220" prefWidth="220">
            
            // ---------- Navigation Section Title ----------
            <Label text="Navigation" 
                  style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            
            // ---------- Main Navigation Buttons ----------
            <VBox spacing="8" style="-fx-padding: 0;">
                <Button text="Dashboard" fx:id="dashboardBtn" onAction="#switchToDashboard" 
                       style="-fx-padding: 12 15; -fx-font-size: 12px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" 
                       maxWidth="Infinity" prefWidth="180" wrapText="true"/>
                <Button text="Projects" fx:id="projectsBtn" onAction="#switchToProjects" 
                       style="-fx-padding: 12 15; -fx-font-size: 12px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" 
                       maxWidth="Infinity" prefWidth="180" wrapText="true"/>
            </VBox>
            
            // ---------- Sidebar Divider ----------
            <Separator style="-fx-padding: 5 0;"/>
            
            // ---------- Admin Section ----------
            <Label text="Admin" 
                  style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #bdc3c7;"/>
            <Button text="Admin Panel" fx:id="adminBtn" onAction="#switchToAdminPanel" 
                   style="-fx-padding: 12 15; -fx-font-size: 12px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" 
                   maxWidth="Infinity" prefWidth="180" wrapText="true"/>
            
            // ---------- Spacer Area ----------
            <Region VBox.vgrow="ALWAYS"/>
            
            // ---------- Sidebar Footer Version ----------
            <Label text="v1.0.0" 
                  style="-fx-font-size: 9px; -fx-text-fill: #7f8c8d; -fx-alignment: CENTER;"/>
        </VBox>
    </left>
    
    // ============ Center Dynamic Content Area ============
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ffffff;"/>
    </center>
    
</BorderPane>
