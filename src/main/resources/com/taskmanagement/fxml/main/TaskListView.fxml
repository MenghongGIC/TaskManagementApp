<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanagement.controller.DashboardController">
    <top>
        <HBox style="-fx-padding: 10; -fx-spacing: 10; -fx-background-color: #f0f0f0; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;" alignment="CENTER_LEFT">
            <Label text="Task List View" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Refresh" onAction="#refreshTaskList" style="-fx-padding: 5 10; -fx-font-size: 11;" />
            <Button text="Add Task" onAction="#handleAddTask" style="-fx-padding: 5 10; -fx-font-size: 11;" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-padding: 10;">
            <VBox fx:id="taskListContainer" spacing="8" style="-fx-padding: 10;" />
        </ScrollPane>
    </center>

    <bottom>
        <HBox style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;" alignment="CENTER_LEFT">
            <Label fx:id="taskListStatusLabel" text="Loading tasks..." />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </bottom>
</BorderPane>
