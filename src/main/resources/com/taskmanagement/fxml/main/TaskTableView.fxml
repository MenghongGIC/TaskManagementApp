<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanagement.controller.DashboardController">
    <top>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Task Table View" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button text="Refresh" onAction="#refreshTaskTable" style="-fx-padding: 8 15; -fx-font-size: 11px;"/>
                <Button text="Add Task" onAction="#handleAddTask" style="-fx-padding: 8 15; -fx-font-size: 11px;"/>
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="ðŸ” Search tasks..." style="-fx-padding: 8 10; -fx-font-size: 11px;" prefWidth="250" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tasksTableView" />
    </center>
    
    <bottom>
        <HBox style="-fx-padding: 10; -fx-background-color: #ecf0f1;" alignment="CENTER_LEFT">
            <Label fx:id="taskTableStatusLabel" text="Loading..." style="-fx-font-size: 11px;"/>
        </HBox>
    </bottom>
</BorderPane>
