<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanagement.controller.CreateTaskController" style="-fx-background-color: #f8f9fa;">
    <top>
        <VBox style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #ecf0f1; -fx-border-width: 0 0 1 0;">
            <Label text="Create New Task" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
        </VBox>
    </top>
    <center>
        <VBox spacing="15" style="-fx-padding: 25; -fx-fill-width: true;" VBox.vgrow="ALWAYS">
            <!-- Validation Label -->
            <Label fx:id="validationLabel" text="" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 0;" managed="false" />
            
            <!-- Scrollable Form Area -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-padding: 0; -fx-border-color: transparent;">
                <!-- Form GridPane -->
                <GridPane hgap="15" vgap="15" style="-fx-padding: 20; -fx-border-color: #ecf0f1; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-color: #ffffff;">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="150" />
                        <ColumnConstraints prefWidth="300" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="40" />
                        <RowConstraints minHeight="80" />
                        <RowConstraints minHeight="40" />
                        <RowConstraints minHeight="40" />
                        <RowConstraints minHeight="40" />
                        <RowConstraints minHeight="40" />
                    </rowConstraints>
                    
                    <!-- Task Title -->
                    <Label text="Task Title *:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="titleField" promptText="Enter task title" style="-fx-padding: 8; -fx-font-size: 12px; -fx-border-radius: 3;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    
                    <!-- Description -->
                    <Label text="Description:" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-alignment: top;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextArea fx:id="descriptionField" promptText="Enter task description" wrapText="true" style="-fx-padding: 8; -fx-font-size: 12px; -fx-border-radius: 3; -fx-control-inner-background: #ffffff;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    
                    <!-- Status -->
                    <Label text="Status *:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <ComboBox fx:id="statusCombo" style="-fx-padding: 8; -fx-font-size: 12px;" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    
                    <!-- Priority -->
                    <Label text="Priority *:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <ComboBox fx:id="priorityCombo" style="-fx-padding: 8; -fx-font-size: 12px;" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    
                    <!-- Due Date -->
                    <Label text="Due Date:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <DatePicker fx:id="dueDatePicker" style="-fx-padding: 8; -fx-font-size: 12px;" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    
                    <!-- Assignee -->
                    <Label text="Assign To:" style="-fx-font-weight: bold; -fx-text-fill: #34495e;" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <ComboBox fx:id="assigneeCombo" style="-fx-padding: 8; -fx-font-size: 12px; -fx-text-fill: #000000;" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>
            </ScrollPane>
            
            <!-- Action Buttons (Always Visible) -->
            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 15 0 0 0; -fx-border-color: #ecf0f1; -fx-border-width: 1 0 0 0;">
                <Button fx:id="saveBtn" text="✓ Create Task" style="-fx-padding: 10 20; -fx-font-size: 12px; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" />
                <Button fx:id="cancelBtn" text="✕ Cancel" style="-fx-padding: 10 20; -fx-font-size: 12px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
