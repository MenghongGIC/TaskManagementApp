<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.taskmanagement.controller.AuthController"
      alignment="CENTER"
      spacing="35"
      prefWidth="420"
      prefHeight="600"
      styleClass="root">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Task Manager" id="appTitle"/>

    <VBox fx:id="loginPanel" spacing="15" alignment="CENTER">
        <Label text="Login" styleClass="heading"/>

        <TextField fx:id="loginUsernameField"
                   promptText="Username"
                   styleClass="text-field"/>

        <PasswordField fx:id="loginPasswordField"
                       promptText="Password"
                       styleClass="password-field"/>

        <Button text="Login"
                onAction="#handleLogin"
                styleClass="button"/>

        <Label fx:id="loginErrorLabel"
               styleClass="error-label"
               visible="false"/>
    </VBox>

    <VBox fx:id="registerPanel"
          spacing="15"
          alignment="CENTER"
          visible="false">

        <Label text="Register" styleClass="heading"/>

        <TextField fx:id="registerUsernameField"
                   promptText="Username"
                   styleClass="text-field"/>

        <TextField fx:id="registerEmailField"
                   promptText="Email (optional)"
                   styleClass="text-field"/>

        <PasswordField fx:id="registerPasswordField"
                       promptText="Password"
                       styleClass="password-field"/>

        <PasswordField fx:id="registerConfirmPasswordField"
                       promptText="Confirm Password"
                       styleClass="password-field"/>

        <Button text="Register"
                onAction="#handleRegister"
                styleClass="button"/>

        <Label fx:id="registerErrorLabel"
               styleClass="error-label success-label"
               visible="false"/>
    </VBox>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="toggleMessageLabel"
               text="Don't have an account?"/>
        <Hyperlink fx:id="toggleLink"
                   text="Register here"
                   onAction="#togglePanel"/>
    </HBox>

</VBox>
